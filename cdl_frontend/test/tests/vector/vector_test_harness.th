int reason
int vector_number
int tv

#trace 1

list libs
list fns
list cmds
list objs
list sys.fifo
list test_vectors
list cdlsim.sim

memory test_vectors 2048 64

test_vectors.load env_string("vectors_filename") 0

reset "test_reset" 1

wait 1

set vector_number 0
gosub test_values

wait 1
add vector_number vector_number 1
gosub test_values

drive "test_reset" 0
wait 1
add vector_number vector_number 1
gosub test_values

for i 0 10 1
wait 1
add vector_number vector_number 1
gosub test_values
next i

pass 0 "Test succeeded"

end

test_fail:
printf "Test failed, vector number %d0%, reason %d1%" vector_number reason
fail vector_number "**************************************************************************** Test failed"
end



test_values:

printf "Cycle %d0% vector number %d1%, testing values" global_cycle() vector_number

int tv_0
int tv_1
int index

set index vector_number
mult index index 4

set tv_0 test_vectors.read(index)
add index index 1
set tv_1 test_vectors.read(index)
drive vector_input_0 tv_0
drive vector_input_1 tv_1

add index index 1
set tv_0 test_vectors.read(index)
add index index 1
set tv_1 test_vectors.read(index)

printf "   info: expected %x0% %x1% got %x2% %x3%" tv_0 tv_1 input("vector_output_0") input("vector_output_1")

bne tv_0 input("vector_output_0") test_fail
bne tv_1 input("vector_output_1") test_fail

return
