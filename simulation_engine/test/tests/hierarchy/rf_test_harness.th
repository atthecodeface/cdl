reset "test_reset" 1

wait 1

reset "test_reset" 0

int i

for i 0 31 1
drive "write_enable" 1
drive "write_address" i
drive "write_data" i
wait 1

next i

drive "write_enable" 0

for i 0 31 1
drive "read_address" i
wait 2
printf "Output value %d0%" input("read_data")
bne input("read_data") i test_fail

next i

pass 0 "Test succeeded"

end

test_fail:
printf "Test failed %d0% %d1%" global_cycle() input("read_data")
fail global_cycle() "**************************************************************************** Test failed"
end

